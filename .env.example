# =============================================================================
# PLASMA STABLECOIN SWAP & BRIDGE - ENVIRONMENT CONFIGURATION
# =============================================================================

# Network Configuration
# -----------------------------------------------------------------------------
PLASMA_TESTNET_RPC_URL=https://testnet.plasma.network
PLASMA_MAINNET_RPC_URL=https://mainnet.plasma.network

# Deployment Configuration
# -----------------------------------------------------------------------------
PRIVATE_KEY=your_private_key_here_without_0x_prefix
DEPLOYER_ADDRESS=0x...

# Guardian and Emergency Addresses
# -----------------------------------------------------------------------------
GUARDIAN_ADDRESS=0x...
EMERGENCY_MULTISIG_ADDRESS=0x...
RELAYER_ADDRESS=0x...

# Contract Addresses (populated after deployment)
# -----------------------------------------------------------------------------
PLASMA_PAYMASTER_ADDRESS=0x...
PRICE_ORACLE_ADDRESS=0x...
STABLE_SWAP_ADDRESS=0x...
BRIDGE_HANDLER_ADDRESS=0x...
BITCOIN_BRIDGE_ADDRESS=0x...

# Token Addresses on Plasma Network
# -----------------------------------------------------------------------------
# Stablecoins
USDT_ADDRESS=0x...
USDC_ADDRESS=0x...
DAI_ADDRESS=0x...
FRAX_ADDRESS=0x...
BUSD_ADDRESS=0x...

# Wrapped Assets
WBTC_ADDRESS=0x...
WETH_ADDRESS=0x...
WMATIC_ADDRESS=0x...
WBNB_ADDRESS=0x...

# Bridge Addresses for Other Networks
# -----------------------------------------------------------------------------
PLASMA_BRIDGE_ADDRESS=0x...
ETHEREUM_BRIDGE_ADDRESS=0x...
POLYGON_BRIDGE_ADDRESS=0x...
BSC_BRIDGE_ADDRESS=0x...
ARBITRUM_BRIDGE_ADDRESS=0x...
OPTIMISM_BRIDGE_ADDRESS=0x...

# Network RPC URLs for Cross-Chain Operations
# -----------------------------------------------------------------------------
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
OPTIMISM_RPC_URL=https://mainnet.optimism.io

# API Keys for Block Explorers
# -----------------------------------------------------------------------------
PLASMA_EXPLORER_API_KEY=your_plasma_explorer_api_key
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key
BSCSCAN_API_KEY=your_bscscan_api_key
ARBISCAN_API_KEY=your_arbiscan_api_key
OPTIMISTIC_ETHERSCAN_API_KEY=your_optimistic_etherscan_api_key

# Gas Reporter Configuration
# -----------------------------------------------------------------------------
REPORT_GAS=true
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Frontend Configuration
# -----------------------------------------------------------------------------
REACT_APP_PLASMA_CHAIN_ID=1001
REACT_APP_PLASMA_CHAIN_NAME=Plasma Testnet
REACT_APP_PLASMA_RPC_URL=https://testnet.plasma.network
REACT_APP_PLASMA_EXPLORER_URL=https://explorer.testnet.plasma.network

# Contract Configuration
# -----------------------------------------------------------------------------
DEFAULT_SWAP_FEE=4  # 0.04% in basis points
DEFAULT_BRIDGE_FEE=5  # 0.05% in basis points
MAX_DAILY_VOLUME=1000000  # 1M tokens
RATE_LIMIT_WINDOW=60  # 1 minute in seconds
MAX_SLIPPAGE=300  # 3% in basis points

# Oracle Configuration
# -----------------------------------------------------------------------------
ORACLE_UPDATE_INTERVAL=300  # 5 minutes in seconds
ORACLE_HEARTBEAT=3600  # 1 hour in seconds
ORACLE_DEVIATION_THRESHOLD=100  # 1% in basis points
CIRCUIT_BREAKER_THRESHOLD=2000  # 20% in basis points

# Security Configuration
# -----------------------------------------------------------------------------
MULTISIG_THRESHOLD=2  # Minimum signatures required
TIMELOCK_DELAY=86400  # 24 hours in seconds
GUARDIAN_DELAY=0  # Immediate for emergencies
PAUSE_GUARDIAN_ENABLED=true

# Monitoring and Alerts
# -----------------------------------------------------------------------------
MONITORING_ENABLED=true
ALERT_WEBHOOK_URL=https://your-monitoring-service.com/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Development Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
DEBUG=true
VERBOSE_LOGGING=true
ENABLE_FORKING=false
FORK_BLOCK_NUMBER=latest

# Testing Configuration
# -----------------------------------------------------------------------------
TEST_MNEMONIC=test test test test test test test test test test test junk
TEST_ACCOUNTS=10
TEST_BALANCE=10000  # ETH
COVERAGE_ENABLED=true

# Database Configuration (if using backend monitoring)
# -----------------------------------------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plasma_swap
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# Redis Configuration (for caching)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# IPFS Configuration (for metadata storage)
# -----------------------------------------------------------------------------
IPFS_GATEWAY=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_project_id
IPFS_PROJECT_SECRET=your_project_secret

