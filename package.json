{
  "name": "plasma-stablecoin-swap",
  "version": "1.0.0",
  "description": "Production-ready stablecoin swap and bridge protocol for Plasma blockchain",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "deploy:testnet": "hardhat run deploy.js --network plasma-testnet",
    "deploy:mainnet": "hardhat run deploy.js --network plasma-mainnet",
    "verify:testnet": "hardhat run scripts/verify.js --network plasma-testnet",
    "verify:mainnet": "hardhat run scripts/verify.js --network plasma-mainnet",
    "size": "hardhat size-contracts",
    "gas-report": "REPORT_GAS=true hardhat test",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol'",
    "clean": "hardhat clean"
  },
  "keywords": [
    "plasma",
    "stablecoin",
    "swap",
    "bridge",
    "defi",
    "solidity",
    "ethereum",
    "bitcoin"
  ],
  "author": "Plasma Foundation",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "ethers": "^5.7.2"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.17.1",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.4",
    "typechain": "^8.2.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasma-network/stablecoin-swap"
  },
  "bugs": {
    "url": "https://github.com/plasma-network/stablecoin-swap/issues"
  },
  "homepage": "https://github.com/plasma-network/stablecoin-swap#readme"
}
